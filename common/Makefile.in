ifdef CROSS_COMPILE
  include ../common/$(CROSS_COMPILE)
else
ifeq ($(OS),Windows_NT)
  include ../common/Makefile.win32
else
  UNAME_S := $(shell uname -s)
  UNAME_P := $(shell uname -m)
  include ../common/Makefile.$(UNAME_S)-$(UNAME_P)  
endif
endif

ifdef DEBUG
ifeq ($(DEBUG), yes) 
    CXX_FLAGS +=-g2
endif
ifeq ($(DEBUG), no) 
    CXX_FLAGS +=-O3
endif
else
    CXX_FLAGS +=-g2
endif
